<!DOCTYPE html>
<html lang="en">
    <head>
        <title>@ViewData["Title"] - VertoTest</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    </head>
    <body>
        <!-- Define a header to be used on all pages -->
        <header class="outline">
            <div class="grid-y">
                
                <div class="grid-x grid-margin-x">
                    <div class="cell large-auto large-offset-2">Logo</div>
                </div> <br>


           <div class="grid-x grid-margin-x">
                
                <div class="cell large-auto large-offset-2">Our Products</div>
                <div class="cell large-auto">Where to Buy</div>
                <div class="cell large-auto">News & Reviews</div>
                <div class="cell large-auto">Help & Support</div>
                <div class="cell large-auto">My Opticron</div>
                <div class="cell large-auto"></div>
                
                <input class="cell large-auto" type="text" placeholder="Search..">
                
                <div class="cell large-auto"></div>
            </div>
        </div>

            
        </header>
        
        <!--Render the main content from the views ect. -->
        <div> 
            <main role="main" class="">
                @RenderBody()
            </main>
        </div>

        <!-- Define a footer to be used on all pages -->
        <footer class="outline">
            <div class="outline">This is the footer</div>
        </footer>
    </body>
</html>